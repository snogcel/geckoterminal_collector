# Production Environment Configuration

# Application Configuration
VERSION=latest
ENVIRONMENT=production

# Database Configuration (PostgreSQL recommended for production)
GECKO_DB_URL=postgresql://gecko:${POSTGRES_PASSWORD}@postgres:5432/gecko_data
GECKO_DB_POOL_SIZE=20
GECKO_DB_ECHO=false

# PostgreSQL Configuration
POSTGRES_DB=gecko_data
POSTGRES_USER=gecko
# POSTGRES_PASSWORD should be set as a secret

# Logging Configuration
GECKO_LOG_LEVEL=INFO

# Collection Intervals (production settings)
GECKO_TOP_POOLS_INTERVAL=1h
GECKO_OHLCV_INTERVAL=1h
GECKO_TRADE_INTERVAL=30m
GECKO_WATCHLIST_INTERVAL=1h

# Production thresholds
GECKO_MIN_TRADE_VOLUME=100

# Resource Limits (production settings)
MEMORY_LIMIT=2G
CPU_LIMIT=2.0
MEMORY_RESERVATION=1G
CPU_RESERVATION=1.0

# Enable all services in production
WITH_POSTGRES=true
WITH_REDIS=true
WITH_MONITORING=true

# Security settings
GRAFANA_PASSWORD=${GRAFANA_ADMIN_PASSWORD}