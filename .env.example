# GeckoTerminal Data Collector Environment Configuration
# Copy this file to .env and customize for your environment

# Application Configuration
VERSION=latest
ENVIRONMENT=production

# Database Configuration
GECKO_DB_URL=sqlite:///app/data/gecko_data.db
GECKO_DB_POOL_SIZE=10
GECKO_DB_ECHO=false
GECKO_DB_TIMEOUT=30

# PostgreSQL Configuration (if using PostgreSQL instead of SQLite)
POSTGRES_DB=gecko_data
POSTGRES_USER=gecko
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# API Configuration
GECKO_API_TIMEOUT=30
GECKO_API_MAX_CONCURRENT=5
GECKO_API_RATE_LIMIT_DELAY=1.0

# Collection Configuration
GECKO_DEX_TARGETS=heaven,pumpswap
GECKO_DEX_NETWORK=solana
GECKO_MIN_TRADE_VOLUME=100

# Collection Intervals
GECKO_TOP_POOLS_INTERVAL=1h
GECKO_OHLCV_INTERVAL=1h
GECKO_TRADE_INTERVAL=30m
GECKO_WATCHLIST_INTERVAL=1h

# Error Handling Configuration
GECKO_MAX_RETRIES=3
GECKO_BACKOFF_FACTOR=2.0
GECKO_ERROR_MAX_RETRIES=3
GECKO_ERROR_BACKOFF_FACTOR=2.0
GECKO_ERROR_CIRCUIT_BREAKER_THRESHOLD=5
GECKO_ERROR_CIRCUIT_BREAKER_TIMEOUT=300

# Logging Configuration
GECKO_LOG_LEVEL=INFO

# Watchlist Configuration
GECKO_WATCHLIST_AUTO_ADD=true
GECKO_WATCHLIST_REMOVE_INACTIVE=false

# Service Ports
HEALTH_PORT=8080
POSTGRES_PORT=5432
REDIS_PORT=6379
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Resource Limits
MEMORY_LIMIT=1G
CPU_LIMIT=1.0
MEMORY_RESERVATION=512M
CPU_RESERVATION=0.5

# Monitoring Configuration
GRAFANA_PASSWORD=admin

# File Paths
CONFIG_FILE=./config.yaml
WATCHLIST_FILE=./watchlist.csv

# Optional Service Flags
WITH_POSTGRES=false
WITH_REDIS=false
WITH_MONITORING=false