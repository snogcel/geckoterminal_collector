# Development Environment Configuration

# Application Configuration
VERSION=dev
ENVIRONMENT=development

# Database Configuration (SQLite for development)
GECKO_DB_URL=sqlite:///app/data/gecko_data_dev.db
GECKO_DB_ECHO=true

# Logging Configuration (more verbose for development)
GECKO_LOG_LEVEL=DEBUG

# Collection Intervals (more frequent for development/testing)
GECKO_TOP_POOLS_INTERVAL=10m
GECKO_OHLCV_INTERVAL=15m
GECKO_TRADE_INTERVAL=5m
GECKO_WATCHLIST_INTERVAL=10m

# Lower thresholds for development
GECKO_MIN_TRADE_VOLUME=10

# Resource Limits (lower for development)
MEMORY_LIMIT=512M
CPU_LIMIT=0.5
MEMORY_RESERVATION=256M
CPU_RESERVATION=0.25

# Enable monitoring in development
WITH_MONITORING=true